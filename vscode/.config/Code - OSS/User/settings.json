{
    // Editor
    "editor.minimap.maxColumn": 100,
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 100,
    "editor.minimap.renderCharacters": false,
    "editor.fontFamily": "'Source Code Pro'",
    "editor.minimap.showSlider": "always",
    
    "files.autoSave": "onFocusChange",

    // Workbench
    "workbench.iconTheme": "material-icon-theme",
    "workbench.activityBar.visible": false,
    "workbench.sideBar.location": "right",
    "workbench.fontAliasing": "auto",
    "keyboard.dispatch": "keyCode",
    "window.menuBarVisibility": "toggle",

    // -------------------------------------------------------------------------------- 
    // Markdown
    "html.format.wrapLineLength": 100,
    "[markdown]": {
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 100
    },

    "markdown-preview-enhanced.enableExtendedTableSyntax": true,
    "markdown-preview-enhanced.enableHTML5Embed": true,
    "markdown-preview-enhanced.enableScriptExecution": true,
    "markdown-preview-enhanced.enableTypographer": true,
    "markdown-preview-enhanced.HTML5EmbedUseLinkSyntax": true,
    
    "markdown-preview-enhanced.previewTheme": "monokai.css",
    "latex-workshop.view.pdf.viewer": "external",

    // -------------------------------------------------------------------------------- 
    // Vim 
    "vim.useSystemClipboard": true,
    "vim.sneak": true,
    "vim.enableNeovim": true,
    "vim.neovimPath": "/usr/bin/nvim",
    "vim.camelCaseMotion.enable": true,
    "vim.foldfix": true,
    "vim.surround": true,
    "vim.easymotion": true,

    "vim.normalModeKeyBindings": [
        {
            "before": ["z", "a"],
            "commands": [
                "editor.toggleFold",
            ]
        },
        {
            "before": ["z", "f", "1"],
            "commands": [
                "editor.foldLevel1"
            ]
        },
        {
            "before": ["<C-j>"],
            "commands": [
                "workbench.action.focusNextGroup"
            ]
        }
    ],

    // Language specific
    "go.lintOnSave": "off",

    // File association
    "files.associations": {
        "config": "properties",
        "*.vim": "vimrc",
        "*.vimrc": "vimrc"
    },
    "window.zoomLevel": 0,
    "debug.console.fontSize": 16,
    "vscode-neovim.neovimPath": "/usr/bin/nvim",
    "vscode-neovim.neovimInitPath": "/home/jfs/myconfig/nvim/.config/nvim/init2.vim",
    // "editor.scrollBeyondLastLine": false,
    "workbench.colorTheme": "Gruvbox Material Dark"
}